<?xml version="1.0"?>
<!--
/**
 * Scommerce OptimiserBase Module configuration file for defining all configurations required for this module
 * @category   Scommerce
 * @package    Scommerce_OptimiserBase
 * @author     Scommerce Mage <core@scommerce-mage.com>
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- Add new Tab -->
        <tab id="scommerce" translate="label" sortOrder="400">
            <label>Scommerce Configuration</label>
        </tab>
        <section id="scommerce_optimiserbase"
                 translate="label"
                 type="text"
                 sortOrder="210"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Website Speed Optimiser</label>
            <tab>scommerce</tab>
            <!-- resource tag name which we have to defined in the acl.xml -->
            <resource>Scommerce_OptimiserBase::config_optimiserbase</resource>
            <group id="general"
                   translate="label"
                   type="text"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="enabled"
                           translate="label"
                           type="select"
                           sortOrder="10"
                           showInDefault="1"
                           showInWebsite="1"
                           showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="license_key"
                               translate="label"
                               type="text"
                               sortOrder="20"
                               showInDefault="1"
                               showInWebsite="1" showInStore="1">
                    <label>License Key</label>
                </field>
            </group>
        </section>
    </system>
</config>
